<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/main_layout"
    android:background="@android:color/white">


    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/traffic_light_red"
        android:id="@+id/traffic_light"
        android:layout_marginRight="19dp"
        android:layout_marginEnd="19dp"
        android:layout_alignParentTop="true" />


    <ImageView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:src="@drawable/ergonomic_picture"
       android:id="@+id/posture"
       android:layout_centerInParent="true"/>

    <View
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:background="@drawable/circle_red"
        android:id="@+id/upper_back"
        android:layout_marginTop="124dp"
        android:layout_alignTop="@+id/posture"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="109dp"
        android:layout_marginStart="109dp" />

    <View
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:background="@drawable/circle_red"
        android:id="@+id/lower_back"
        android:layout_marginTop="17dp"
        android:layout_marginLeft="110dp"
        android:layout_below="@+id/upper_back"/>

    <View
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:background="@drawable/circle_red"
        android:id="@+id/sitting_bone"
        android:layout_marginTop="45dp"
        android:layout_marginLeft="120dp"
        android:layout_below="@+id/upper_back"/>

    <View
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:background="@drawable/circle_red"
        android:id="@+id/leg"
        android:layout_marginTop="46dp"
        android:layout_marginLeft="152dp"
        android:layout_below="@+id/upper_back"/>

    <View
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:background="@drawable/circle_red"
        android:id="@+id/foot"
        android:layout_marginTop="118dp"
        android:layout_marginLeft="176dp"
        android:layout_below="@+id/upper_back"/>

    <View
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:background="@drawable/circle_red"
        android:id="@+id/arm"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="150dp"
        android:layout_below="@+id/upper_back"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Wanna play?"
        android:id="@+id/workout_button"
        android:background="#ff2c42ff"
        android:layout_above="@+id/static_work" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Let's do Sport!"
        android:id="@+id/static_work"
        android:layout_marginTop="5dp"
        android:layout_alignParentBottom="true"
        android:background="#ff99ff59" />
</RelativeLayout>
